<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>My first CRUD servlet</display-name>

  <!--
  Нужно добавить мапинг для нашего сервлета
  Сделаем так, чтобы по URLу http://localhost:9090/crud
  стартовал класс нашего сервлета
  -->

  <servlet>
    <servlet-name>servlet-edu</servlet-name>
    <servlet-class>controller.CrudServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servlet-edu</servlet-name>
    <url-pattern>/crud</url-pattern>
  </servlet-mapping>

</web-app>
